@page
@model EmmanuelJavaScriptWeb.Pages.Account.RegistrationModel
@{
    ViewData["Title"] = "Registeration";
}
<form method="post" class="is-valid">
    <div class=" row mt-5">
        <div class="col-md-3 col-sm-2 col-lg-3">
        </div>
        <div class="mt-2 col-md-9 col-sm-8 col-lg-6 col-12 card">
            <div class="card-body">
                <h2 class="text-center">
                    <strong>Create an Account</strong>
                </h2>
                <hr />
                <div class="mt-2 row">
                    <label class="col-sm-4 col-4 col-form-label"><strong>Full Name</strong></label>
                    <div class="col-sm-8  col-8">
                        <input asp-for="UserVM.Name" class="form-control form-control-sm" />
                        <span asp-validation-for="UserVM.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-3 row">
                    <label class="col-sm-4 col-4 col-form-label"><strong>Email</strong></label>
                    <div class="col-sm-8 col-8">
                        <input asp-for="UserVM.Email" class="form-control form-control-sm" />
                        <span asp-validation-for="UserVM.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-3 row">
                    <label class="col-sm-4 col-4 col-form-label"><strong>Password</strong></label>
                    <div class="col-sm-8 col-8">
                        <input asp-for="UserVM.Password" class="form-control form-control-sm" />
                        <span asp-validation-for="UserVM.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 mt-3 row">
                    <label for="inputPassword" class="col-sm-4 col-4 col-form-label"><strong>Confirm Password</strong></label>
                    <div class="col-sm-8 col-8">
                        <input asp-for="UserVM.ConfirmPassword" class="form-control form-control-sm" />
                        <span asp-validation-for="UserVM.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
                <div class="mb-3 mt-3 row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-8">
                        <button type="submit" class="btn btn-primary">
                            <strong><i class="fa fa-registered"></i> &nbsp; Register</strong>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}